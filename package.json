{
  "name": "contextcode-cli",
  "version": "0.3.6",
  "description": "AI-assisted CLI that indexes repositories, generates architecture documentation, and produces executable task plans for LLM agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ctx": "bin/contextcode.js"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "dev": "tsx src/index.ts",
    "test": "tsx --test \"packages/providers/src/__tests__/**/*.ts\" \"packages/core/src/__tests__/**/*.ts\" \"src/**/*.test.ts\"",
    "dev:core": "tsx packages/core/src/cli-dev.ts"
  },
  "dependencies": {
    "@types/react": "^19.2.6",
    "clipboardy": "^5.0.1",
    "fs-extra": "^11.1.1",
    "globby": "^13.1.3",
    "ink": "^6.5.1",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0",
    "zod": "^3.22.2"
  },
  "keywords": [
    "cli",
    "ai",
    "llm",
    "documentation",
    "repository-analysis",
    "code-indexing",
    "task-planning",
    "anthropic",
    "gemini",
    "context-generation"
  ],
  "author": "contextcode contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/contextcode-co/contextcode-cli.git"
  },
  "bugs": {
    "url": "https://github.com/contextcode-co/contextcode-cli/issues"
  },
  "homepage": "https://github.com/contextcode-co/contextcode-cli#readme",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.7.5",
    "tsup": "^8.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
