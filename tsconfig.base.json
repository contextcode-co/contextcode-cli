{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@contextcode/core": ["packages/core/src/index.ts"],
      "@contextcode/core/*": ["packages/core/src/*"],
      "@contextcode/agents": ["packages/agents/src/index.ts"],
      "@contextcode/agents/*": ["packages/agents/src/*"],
      "@contextcode/providers": ["packages/providers/src/provider.ts"],
      "@contextcode/providers/*": ["packages/providers/src/*"],
      "@contextcode/types": ["packages/types/src/index.ts"],
      "@contextcode/types/*": ["packages/types/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src"
  }
}
